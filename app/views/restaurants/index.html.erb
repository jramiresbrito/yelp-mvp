<div class="row justify-content-center mt-4">
  <div class="col-12 col-md-6">
    <% @restaurants.each do |restaurant| %>
      <article>
        <h3 class="d-flex justify-content-between">
          <%= link_to "#{restaurant.name}", restaurant_path(restaurant) %>
          <%= '⭐' * (1..5).to_a.sample %>
        </h3>
        <hr>
      </article>
    <% end %>
  </div>
</div>
